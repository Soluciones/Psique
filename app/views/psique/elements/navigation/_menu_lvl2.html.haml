.menu-lvl2
  .menu-lvl2--caret
    = link_to options[:name], options[:url]
  .menu-lvl2--current
    .line-divider
      = fa_icon 'caret-down icon-menu-lvl2', class: 'icon'
    %span
      = options[:current]
  .menu-options-lvl2
    %ul
      - options[:submenu].each do |option|
        %li
          = link_to option [:name], option[:url], title: option[:name]
